<html>
<head>
    <title><%=title%></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        .page {
            background-color: forestgreen;
        }
        .bases {
            float: right;
            color: white;
        }
        .container {
            width: 100%;
            text-align:center;
            color: white;
        }
        .centered {
            display: inline;
            padding-left: 0px;

        }
        .scroll-view {
            float: right;
        }
        .lineups {
            float: left;
            color: black;
        }
        .count {
            float: left;
            color: white;
        }
        .action {
            padding-bottom: 50px;
        }
    </style>
</head>
<body ng-app="app" class="page">
<% include navbar %>

<div class="container" ng-controller="PlayGameController">

    <div class="row">
        <div class="col-sm-12">
            <!-- <strong>Team at Bat: {{team_at_bat}}</strong> -->
            <BR>
            <div class="score">
                <h2>Team 1: {{team1_score}}</h2>
                <h2>Team 2: {{team2_score}}</h2>
            </div>

            <div class="bases">
                <strong>{{player_positions.onfirst_id}} - 1st</strong>
                <BR>
                <strong>{{player_positions.onsecond_id}} - 2nd</strong>
                <BR>
                <strong>{{player_positions.onthird_id}} - 3rd</strong>
            </div>
            <BR>
            <div class="count">
                <strong>Balls: {{balls}}</strong>
                <br>
                <strong>Strikes: {{strikes}}</strong>
                <br>
                <strong>Outs: {{outs}}</strong>
                <BR>
            </div>
            <div class="centered">
                <game-view-directive data-gameid="id">The Canvas Is Not Supported!</game-view-directive>
                <BR>

            </div>
            <div class="action">
                <button class="btn btn-success" ng-show="showNextButton" ng-click="nextGameEvent()">Next Game Action</button>
            </div>


        </div>
        <br>
        <div class="col-lg-10 col-md-10 col-sm-8 col-xs-6">
            <div class="scroll-view">
                <button class="btn btn-success form-control" ng-show="gameEvents.length == 0" ng-click="startGame()">Start Game</button> <!-- ng-show="gameEvents.length == 0" -->
                <div class="alert alert-success" ng-repeat="event in gameEvents">
                    {{event.type}} {{event.message}}
                    Team 1 Score: {{event.team1_score}} Team 2 Score: {{event.team2_score}}
                    Balls: {{event.balls}}
                    Strikes: {{event.strikes}}
                    Outs: {{event.outs}}
                    Inning: {{event.inning}}
                </div>
            </div>
        </div>
        <div class="lineups">
            <table class="table table-condensed">
                <tr><th>Player Name</th></tr>
                <tr ng-repeat="player in lineup" ng-class="{active : player.already_played == false}"><td>{{player.player_id}}</td></tr>
            </table>
        </div>
    </div>

    <!-- strike ball foul single double triple home_run out-->

    <!-- TEST
    {{opts}} -->

</div>
</body>

<% include footer%>
<script src="jquery/jquery.min.js"></script>
<script src="bootstrap/js/bootstrap.min.js"></script>
<script src="angular/angular.min.js"></script>
<script src="angular-cookies/angular-cookies.min.js"></script>
<script src="javascripts/app.js"></script>
<script src="javascripts/service/UserTokenFactory.js"></script>
<script src="javascripts/service/UserService.js"></script>
<script src="javascripts/service/GameService.js"></script>
<script src="javascripts/service/TeamService.js"></script>
<script src="javascripts/service/PlayerService.js"></script>
<script src="javascripts/controller/ConsoleController.js"></script>
<script src="javascripts/service/ApprovalService.js"></script>
<script src="javascripts/controller/NavbarController.js"></script>
<script src="javascripts/controller/TeamController.js"></script>
<script src="javascripts/controller/GameController.js"></script>
</html>